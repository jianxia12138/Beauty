<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/settingbg"
    tools:context=".SettingFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/settingTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:textSize="25sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/userbg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/idlogo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/meirong" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:text="宇宙无敌仙女棒" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="70dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/chat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:src="@drawable/shequhudong" />
        <TextView
            android:id="@+id/chat1"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:text="交流"  />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/commun"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:src="@drawable/huodong" />
        <TextView
            android:id="@+id/commun1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:text="活动中心"  />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:src="@drawable/xuanshouguanli" />
        <TextView
            android:id="@+id/user1"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:text="设置"  />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/payment"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:src="@drawable/zaixianzhifu" />
        <TextView
            android:id="@+id/payment1"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:text="支付"  />
    </LinearLayout>




</LinearLayout>
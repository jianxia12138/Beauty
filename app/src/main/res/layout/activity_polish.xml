<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chatbg"
    tools:context=".PolishActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/polishex"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/inns" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/polishex_item_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:elegantTextHeight="true"
                android:ellipsize="end"
                android:layout_marginTop="50dp"
                android:maxLines="1"
                android:text="悦诗风吟指甲油"
                android:textSize="20dp"
                android:textColor="#201e1f"/>

            <TextView
                android:id="@+id/polishex_item_author"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:text="4191244"
                android:textColor="#201e1f"/>

            <TextView
                android:id="@+id/polishex_item_college"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="经贸外语学院"
                android:textColor="#201e1f"/>

            <TextView
                android:id="@+id/polishex_item_discription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="亮闪闪的，很好看，衬手白"
                android:ellipsize="end"
                android:maxLines="4"
                android:textColor="#201e1f"/>

            <TextView
                android:id="@+id/polishex_item_price"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="15出"
                android:textColor="#201e1f"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
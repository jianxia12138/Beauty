<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chatbg"
    tools:context=".MakeupActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/makeupex"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/zcx" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/makeupex_item_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:elegantTextHeight="true"
                android:ellipsize="end"
                android:layout_marginTop="50dp"
                android:maxLines="1"
                android:text="植村秀364"
                android:textSize="20dp"
                android:textColor="#201e1f"/>

            <TextView
                android:id="@+id/makeupex_item_author"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:text="41911070"
                android:textColor="#201e1f"/>

            <TextView
                android:id="@+id/makeupex_item_college"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="经济信息工程学院"
                android:textColor="#201e1f"/>

            <TextView
                android:id="@+id/makeupex_item_discription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="色号白调偏粉，适合油皮，夏天不易脱妆，色号不适合本人，买就送植村秀粉底刷。"
                android:ellipsize="end"
                android:maxLines="4"
                android:textColor="#201e1f"/>

            <TextView
                android:id="@+id/makeupex_item_price"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="350出"
                android:textColor="#201e1f"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chatbg"
    tools:context=".LipActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/lipex"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/jfx" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/eyeshadowex_item_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:elegantTextHeight="true"
                android:ellipsize="end"
                android:layout_marginTop="50dp"
                android:maxLines="1"
                android:text="纪梵希307"
                android:textSize="20dp"
                android:textColor="#201e1f"/>

            <TextView
                android:id="@+id/eyeshadowex_item_author"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:text="41723448"
                android:textColor="#201e1f"/>

            <TextView
                android:id="@+id/eyeshadowex_item_college"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="经济信息工程学院"
                android:textColor="#201e1f"/>

            <TextView
                android:id="@+id/eyeshadowex_item_discription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="八成新，膏体无破损，很提气色，适合各种肤色"
                android:ellipsize="end"
                android:maxLines="4"
                android:textColor="#201e1f"/>

            <TextView
                android:id="@+id/eyeshadowex_item_price"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="200出"
                android:textColor="#201e1f"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/lipex2"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/lhn" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/eyeshadowex2_item_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:elegantTextHeight="true"
                android:ellipsize="end"
                android:layout_marginTop="50dp"
                android:maxLines="1"
                android:text="露华浓609"
                android:textSize="20dp"
                android:textColor="#201e1f"/>

            <TextView
                android:id="@+id/eyeshadowex2_item_author"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:text="41700701"
                android:textColor="#201e1f"/>

            <TextView
                android:id="@+id/eyeshadowex2_item_college"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="统计学院"
                android:textColor="#201e1f"/>

            <TextView
                android:id="@+id/eyeshadowex2_item_discription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="仅试色，适合皮肤较白的妹子，挺滋润的，不会拔干。"
                android:ellipsize="end"
                android:maxLines="4"
                android:textColor="#201e1f"/>

            <TextView
                android:id="@+id/eyeshadowex2_item_price"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="25出"
                android:textColor="#201e1f"/>
        </LinearLayout>
    </LinearLayout>




</LinearLayout>
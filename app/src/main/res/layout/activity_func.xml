<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hand"
    android:orientation="vertical"
    tools:context=".FuncFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/funcTextView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:textColor="#e488c2"
        android:text="分享闲置美妆" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/stnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="学号："
            android:textSize="20dp"
            android:layout_marginLeft="15dp"/>
        <EditText
            android:id="@+id/stnumber1"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/college"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="学院："
            android:textSize="20dp"
            android:layout_marginLeft="15dp"/>
        <EditText
            android:id="@+id/college1"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:inputType="text" />
        <Spinner
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:id="@+id/spinner"
            android:entries="@array/college"
            android:spinnerMode="dialog"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/spice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="闲置类别："
            android:textSize="20dp"
            android:layout_marginLeft="15dp"/>
        <EditText
            android:id="@+id/spice1"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:inputType="text" />
        <Spinner
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:id="@+id/spinner1"
            android:entries="@array/type"
            android:spinnerMode="dialog"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="情况介绍："
            android:textSize="20dp"
            android:layout_marginLeft="15dp"/>
        <EditText
            android:id="@+id/intro1"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_gd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        tools:context="theagent.com.photo.FuncActivity">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上传图片:"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"/>

        <GridView
            android:id="@+id/grid_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/photo"
            android:numColumns="4" />
    </LinearLayout>

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:onClick="myClick"
        android:text="提交"
        tools:ignore="OnClick" />


</LinearLayout>